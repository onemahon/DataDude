<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/Primary.Dark</item>
        <!--&lt;!&ndash;   darker variant for the status bar and contextual app bars &ndash;&gt;-->
        <!--<item name="android:colorPrimaryDark">@color/primary_dark</item>-->
        <!--&lt;!&ndash;   theme UI controls like checkboxes and text fields &ndash;&gt;-->
        <!--<item name="android:colorAccent">@color/accent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PlaceCard" parent="CardView">
        <item name="cardBackgroundColor">@color/Card.Background</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="PlaceCardImage">
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Button.Flat" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/Button.TextColor</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/Divider.Color</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Divider.Height</item>
    </style>
</resources>
