<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PlaceCard" parent="CardView">
        <item name="cardBackgroundColor">@color/Card.Background</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="PlaceCardImage">
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Button.Flat" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/Button.TextColor</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/Divider.Color</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Divider.Height</item>
    </style>
</resources>
