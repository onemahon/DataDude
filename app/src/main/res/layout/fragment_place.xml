<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_place_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_place_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_place_WikipediaCard"
            style="@style/PlaceCard"
            android:layout_width="match_parent"
            android:text="TO DO" />

        <com.azandria.placeFinder.cards.MapsCard
            android:id="@+id/fragment_place_MapsCard"
            style="@style/PlaceCard"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/fragment_place_TripAdvisorCard"
            style="@style/PlaceCard"
            android:layout_width="match_parent"
            android:text="TO DO" />

        <com.azandria.placeFinder.cards.HopperCard
            android:id="@+id/fragment_place_HopperCard"
            style="@style/PlaceCard"
            android:layout_width="match_parent" />

    </LinearLayout>
</ScrollView>