<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/places_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/fragment_place_Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.azandria.placeFinder.ImageCard
                android:id="@+id/fragment_place_WikipediaCard"
                style="@style/PlaceCard"
                app:buttonText="@string/View.WikipediaCard.Button" />

            <com.azandria.placeFinder.ImageCard
                android:id="@+id/fragment_place_MapsCard"
                style="@style/PlaceCard"
                app:buttonText="@string/View.MapsCard.Button"
                app:imageDrawableResource="@drawable/card_image_map" />

            <com.azandria.placeFinder.ImageCard
                android:id="@+id/fragment_place_TripAdvisorCard"
                style="@style/PlaceCard"
                app:buttonText="@string/View.TripAdvisor.Button" />

            <com.azandria.placeFinder.ImageCard
                android:id="@+id/fragment_place_HopperCard"
                style="@style/PlaceCard"
                app:buttonText="@string/View.HopperCard.Title"
                app:imageDrawableResource="@drawable/card_image_map" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>