<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_state_switchable_Flipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/fragment_state_switchable_ContentView"
        layout="@layout/view_state_default_content" />

    <ViewStub
        android:id="@+id/fragment_state_switchable_ErrorStub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/fragment_state_switchable_ErrorView" />

    <ViewStub
        android:id="@+id/fragment_state_switchable_LoadingStub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/fragment_state_switchable_LoadingView" />

    <ViewStub
        android:id="@+id/fragment_state_switchable_EmptyStub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/fragment_state_switchable_EmptyView" />

</ViewFlipper>